{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
  <div class="row justify-content-center align-items-center my-5">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center mb-4">Connexion</h1>

          <div style="max-width: 100%;">
            <form method="post">
              <div class="form-floating mb-3">
                <input type="email" value="{{ last_email }}" name="email" id="inputEmail" class="form-control" placeholder="Email" autocomplete="email" required autofocus>
                <label for="inputEmail">Email</label>
              </div>

              <div class="form-floating mb-3">
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" autocomplete="current-password" required>
                <label for="inputPassword">Mot de passe</label>
              </div>

              {# auto généré par symfony, permet de faciliter la connexion à l'utilisateur #}
              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

              <div class="checkbox mb-3">
                <label>
                  <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
              </div>

              <button class="w-100 btn btn-lg btn-primary" type="submit">Se connecter</button>
            </form>
          </div>

          <div class="mt-3 text-center">
            <a href="{# {{ path('mot_de_passe_oublie') }} #}">Mot de passe oublié</a>
            <span class="mx-1">|</span>
            <a href="{{ path('app_register') }}">Vous n'avez pas de compte ? </a>
          </div>

        </div>
      </div>
    </div>
    <div class="col-md-6">
      <img src="{{ asset('assets/images/hero-registration.png') }}" alt="placeholder image" class="img-fluid rounded-end">
    </div>
  </div>
{% endblock %}
