<div class="card">
  <a href="{{ path('product', { 'slug' : product.slug }) }}">
    <img src="/uploads/{{ product.imageName }}" alt="{{ product.nom }}" class="card-img-top w-200">
  </a>
  <div class="card-body">
    <h6 class="card-title">{{ product.nom }}</h6>
    <p class="card-text">{{ (product.prix)|number_format(2, ',', '.') }} â‚¬</p>
    <div class="d-flex justify-content-between align-items-center">
      <a href="{{ path('product', { 'slug' : product.slug }) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
      <form {# action="{{ path('cart_add', {'id': product.id}) }}" #} method="post">
        <input type="hidden" name="_token" value="{{ csrf_token('cart_add' ~ product.id) }}">
        <button type="submit" class="btn btn-outline-primary"><i class="fa fa-shopping-cart"></i></button>
      </form>
    </div>
  </div>
</div>
