{% extends 'base-backend.html.twig' %}

{% block title %}Chocolat index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css">
{% endblock %}

{% block content %}
    <div class="container py-4">
        <h1 class="text-center mb-4">Tableau de bord de l'administration de Chocolat</h1>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>Image</th>
                        <th>Slug</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for chocolat in chocolats %}
                        <tr>
                            <td>{{ chocolat.id }}</td>
                            <td>{{ chocolat.nom }}</td>
                         <td style="max-width: 200px; text-overflow: ellipsis; overflow: hidden;">{{ chocolat.description }}</td>

                            <td>{{ chocolat.prix }} €</td>
                            <td><img src="{{ asset('uploads/' ~ chocolat.imageName) }}" width="50" height="50"/></td>

                            <td>{{ chocolat.slug }}</td>
                        <td class="d-inline-flex">
              <a   href="{{ path('app_admin_crud_chocolat_show', {'id': chocolat.id}) }}" class="btn btn-dark me-2"><i class="align-middle" data-feather="eye"></i></>
              <a   href="{{ path('app_admin_crud_chocolat_edit', {'id': chocolat.id}) }}" class="btn btn-success me-2"><i class="align-middle" data-feather="edit-2"></i></a>
                {% include 'admin/admin_crud_chocolat/_delete_form.html.twig' %} 
</td> 


                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="text-center">
            <a href="{{ path('app_admin_crud_chocolat_new') }}" class="btn btn-primary btn-lg mt-4">Créer un nouveau</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js"></script>
{% endblock %}
