{% extends 'base-backend.html.twig' %}

{% block title %}Chocolat{% endblock %}



{% block content %}

 <div class="container py-4">
    <h1 class="text-center mb-4">Chocolat</h1>

    <div class="container">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ chocolat.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ chocolat.nom }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ chocolat.description }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ chocolat.prix }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ chocolat.image }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ chocolat.slug }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-center">
        <a href="{{ path('app_admin_crud_chocolat_index') }}" class="btn btn-outline-secondary me-3">back to list</a>

         <a   href="{{ path('app_admin_crud_chocolat_edit', {'id': chocolat.id}) }}" class="btn btn-success me-2"><i class="align-middle" data-feather="edit-2"></i></a>

        {{ include('admin/admin_crud_chocolat/_delete_form.html.twig') }}
    </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% endblock %}
